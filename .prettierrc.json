{
    "plugins": ["prettier-plugin-tailwindcss"],
    "printWidth": 100,
    "tabWidth": 4,
    "bracketSpacing": true,
    "trailingComma": "all",
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "singleQuote": true,
    "semi": true,
    "endOfLine": "auto",
    "importOrder": [
        "^react$",
        "^[a-z\\-/]*$",
        "(^@material-ui|components|providers)",
        "(^[src/]*$|^[./]|^[../])",
        "^components/(.*)$",
        "^[./]",
        ""
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
